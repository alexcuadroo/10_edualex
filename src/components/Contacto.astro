---
// Componente Contacto.astro
---

<h2 id="contacto">
  <svg
    width="20"
    height="20"
    viewBox="0 0 26 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M12 18h-7a2 2 0 0 1 -2 -2v-10a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v7.5"
    ></path><path d="M3 6l9 6l9 -6"></path><path d="M15 18h6"></path><path
      d="M18 15l3 3l-3 3"></path></svg
  >Contacto
</h2>
<form class="contact-form" action="/submit-form" method="POST">
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input
      type="text"
      id="nombre"
      name="nombre"
      placeholder="José Pérez"
      required
    />
  </div>

  <div class="form-group">
    <label for="correo">Correo electrónico:</label>
    <input
      type="email"
      id="correo"
      name="correo"
      placeholder="hola@tucorreo.com"
      required
    />
  </div>

  <div class="form-group">
    <label for="mensaje">Mensaje:</label>
    <textarea
      id="mensaje"
      name="mensaje"
      placeholder="Escribe tu mensaje aquí"
      required></textarea>
  </div>

  <button type="submit" class="submit-button">Enviar</button>
</form>
<script is:inline>
  document
    .querySelector(".contact-form")
    .addEventListener("submit", async (e) => {
      e.preventDefault(); // Evita que el formulario se envíe de manera tradicional

      // Obtén los datos del formulario
      const formData = {
        nombre: e.target.nombre.value,
        correo: e.target.correo.value,
        mensaje: e.target.mensaje.value,
      };

      try {
        // Realiza la solicitud POST a la API externa
        const response = await fetch(
          "https://resen-api.vercel.app/api/send-email",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(formData), // Convierte los datos a JSON
          }
        );

        if (response.ok) {
          const result = await response.json();
          alert("Mensaje enviado con éxito");
          e.target.reset();
        } else {
          throw new Error("Error al enviar el mensaje");
        }
      } catch (error) {
        alert(
          "Hubo un error al enviar el mensaje. Por favor, inténtalo de nuevo."
        );
      }
    });
</script>
<style>
  h2 {
    scroll-margin-top: 80px;
    font-size: 2em;
    margin-bottom: 20px;
    align-items: center;
    text-align: center;
    gap: 8px;
    color: #032e5b;
  }
  h2 svg {
    margin-right: 5px;
  }
  .contact-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    border-radius: 8px;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #032e5b;
  }

  .form-group input,
  .form-group textarea {
    width: 95%;
    padding: 8px;
    border: 1px solid #e2f3ff;
    background-color: #e2f3ff;
    border-radius: 4px;
    font-size: 16px;
  }

  .form-group textarea {
    resize: vertical;
    height: 100px;
  }

  .submit-button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
  }
  .submit-button:hover {
    background-color: #032e5b;
    transition: background-color 0.3s ease;
  }

  @media screen and (max-width: 600px) {
    .contact-form {
      margin: 4vw;
    }
  }
</style>
