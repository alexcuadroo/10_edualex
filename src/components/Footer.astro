---
// Datos del footer (puedes mover esto a un archivo JSON si prefieres)
const links = [
  { text: "Inicio", href: "/" },
  { text: "Proyectos", href: "#proyectos" },
  { text: "GitHub", href: "https://github.com/alexcuadroo" },
  { text: "Contacto", href: "/" },
];

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__content">
    <!-- Enlaces de navegaciÃ³n -->
    <nav class="footer__nav">
      <ul>
        {
          links.map((link, index) => (
            <li data-key={index}>
              <a href={link.href}>{link.text}</a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- Derechos de autor -->
    <p class="footer__copyright">
      &copy; {currentYear} EduAlex. Ni izquierdos, ni derechos reservados.
    </p>
  </div>
</footer>

<style>
  .footer {
    color: black;
    padding: 2rem 1rem;
    text-align: center;
  }

  .footer__content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer__nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .footer__nav a {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }

  .footer__nav a:hover {
    text-decoration: underline;
  }

  .footer__copyright {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.8;
  }
</style>
